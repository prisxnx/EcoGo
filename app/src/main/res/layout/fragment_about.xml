<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Image (Replace with your EcoGo logo or image) -->
        <LinearLayout
            android:id="@+id/existingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4F8E4"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="236dp"
                android:layout_height="202dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/highreslogo" />

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:text="🌿 EcoGo is your trusted partner in sustainable transportation. We are committed to providing eco-friendly solutions for your daily commute and travel needs. Our mission is to reduce carbon emissions and promote a cleaner, greener environment for generations to come. 🌍"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Why Choose EcoGo? 🚗🌱"
                android:textColor="#33451F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:text="EcoGo stands out as your preferred sustainable transportation solution because we prioritize environmental responsibility. Our services not only ensure a convenient and efficient commute but also contribute to a significant reduction in carbon footprint. Choose EcoGo and join us in building a healthier, more sustainable planet. 🌎"
                android:textColor="#333333"
                android:textSize="14sp" />

            <Button
                android:id="@+id/readMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#42A5F5"
                android:text="Read More 📖"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/webViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <WebView
                android:id="@+id/aboutWebView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="#E4F8E4" />

            <ProgressBar
                android:id="@+id/webViewProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>