<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/lightgrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:id="@+id/rvCardCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">
            <ImageView
                android:id="@+id/rvCardImage"
                android:src="@drawable/ecogologo"
                android:layout_width="175dp"
                android:layout_height="130dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of Place"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/rvCardCard"
            android:textColor="@color/darkgrey"
            android:textSize="18dp"/>

        <TextView
            android:layout_below="@id/rvTitle"
            android:id="@+id/rvType"
            android:textAppearance="@color/darkgreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="2dp"
            android:text="Type of Place"
            android:textColor="@color/darkgreen"
            android:textSize="10dp" />

        <TextView
            android:layout_below="@id/rvType"
            android:id="@+id/rvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:text="xx km"
            android:textColor="@color/darkgreen"
            android:textSize="10dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>