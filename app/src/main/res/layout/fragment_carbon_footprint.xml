<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.CarbonFootprintFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=" ðŸŒ  Choose from the options below to gauge your environmental impact using     our Carbon Footprint Calculator!"
            android:textColor="#094E0D"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="ðŸŒ¿  Take a step towards sustainable living and make informed eco-friendly choices. "
            android:textColor="#003A03"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="  Transportation:  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_Trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Distance Travelled:  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/distance_travelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Enter the distance travelled in km"
                android:inputType="number|numberDecimal"
                android:textColor="#000000"
                android:textSize="14.5dp" />

        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="  Accomadation:  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_ACC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="  Number of Nights:  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/no_nights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Enter the number of nights"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="14.5dp" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="  Activity:  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_AC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:text="  Time Taken (hrs):"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/no_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" Enter the number of activties"
                android:inputType="number|numberDecimal"
                android:textColor="#000000"
                android:textSize="14.5dp" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/boarder"
            android:backgroundTint="#06C28F"
            android:text="Calculate" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="18dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Total Carbon Footprint:  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/CF_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp" />

        </TableRow>
    </LinearLayout>

</FrameLayout>